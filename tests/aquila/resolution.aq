type Resolve {
    let a: int;

    def shadow() {
        print[int](a);
        let a = 4;
        print[int](a);

        if true {
            let a = 6;
            print[int](a);
        }

        print[int](a);
    }
}

let resolve = Resolve(2);

/// -> 2
/// -> 4
/// -> 6
/// -> 4
resolve.shadow();
